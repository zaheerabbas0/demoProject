<p id="notice"><%= notice %></p>
  <div class="container">
      <h1>Products</h1>
        <div class="row">      
          <% @products.each do |product| %>
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card" style="width: 18rem;">
                  <div class="card-img-top">
                    <% if product.image? %>
                      <%= image_tag product.image.url, :class => "card-img-top" %>
                    <% end %>
                  </div>
                  <div class="card-body">
                    <h3 class="card-title"><%= product.name %></h3>
                    <h5 class="card-title"> Price : <%= product.price %></h5>
                    <h5 class="card-title"> Category : <%= product.category.c_name%></h5>
                    <h5 class="card-title"> Qauntity : <%= product.qauntity %></h5>
                    <p class="card-text"><%= product.details %></p>
                    <%= link_to 'Show', product %><br><br>
                    <p class='pak'><%= product.id %></p>
                    <%= add_to_cart_btn(product)%>
                  </div>
                </div>
             </div>
          <% end %>
        </div>
  </div>
 <div class="pagi">
   <%= will_paginate @products,  list_classes: %w(pagination justify-content-center)  %>
 </div>